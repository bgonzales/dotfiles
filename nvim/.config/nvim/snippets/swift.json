{
	"Reducer": {
		"prefix": "reducer",
		"body": [
			"@Reducer",
			"struct ${1:Reducer} {",
			"    @ObservableState",
			"    struct State: Equatable {",
			"    }",
			"    ",
			"    enum Action {",
			"    }",
			"    ",
			"    var body: some ReducerOf<Self> {",
			"        EmptyReducer()",
			"    }",
			"}"
		],
		"description": "Create a reducer"
	},
	"View Reducer": {
		"prefix": "viewreducer",
		"body": [
			"struct ${1:View}: View {",
			"    let store: StoreOf<${2:Reducer}>",
			"    ",
			"    var body: some View {",
			"        Text(\"${1:View}\")",
			"    }",
			"}"
		],
		"description": "Create a reducer's view"
	}
}
